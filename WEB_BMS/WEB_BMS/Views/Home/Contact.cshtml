
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<link href="~/assets/style_contact.css" rel="stylesheet" />

<div class="container" style="z-index:-1;">
    <img style=" width: 100%; height: auto; /* Đảm bảo ảnh tự động điều chỉnh chiều cao */" src="~/assets/img/img_contact/cat374-3.jpg" alt="Contact Image">
    <div class="overlay">
        <h1>LIÊN HỆ</h1>
        <p>Liên hệ ngay nhận báo giá!</p>
    </div>
</div>
<div class="container">
    <br />
    <br />
    
    <div class="left">
        <h4><span class="info-header uppercase">Liên hệ VLXD Ngọc Hà</span></h4>
        <p class="info-text">Để được tư vấn và báo giá xin vui lòng liên hệ vào hotline của chúng tôi:</p>
        <div class="grid-container">
            <div class="grid-item">
                <img src="https://vlxdsaigon24h.com/wp-content/uploads/2023/11/map-pin-2-fill-2.png" alt="Address Icon">
                <h3 class="uppercase">Địa chỉ</h3>
                <p>833-835 Hưng Phú, Phường 9, Quận 8 , Hồ Chí Minh</p>
            </div>
            <div class="grid-item">
                <img src="https://vlxdsaigon24h.com/wp-content/uploads/2023/11/time-fill.png" alt="Hours Icon">
                <h3 class="uppercase">THÔNG TIN CTY</h3>
                <strong>CÔNG TY TNHH THƯƠNG MẠI VLXD NGỌC HÀ</strong>
                <p><strong>Mã số thuế:</strong><strong>&nbsp;0313219590</strong></p>
            </div>
            <div class="grid-item">
                <img src="https://vlxdsaigon24h.com/wp-content/uploads/2023/11/mail-open-fill.png" alt="Email Icon">
                <h3 class="uppercase">Email</h3>
                <p>pnv287@gmail.com</p>
            </div>
            <div class="grid-item">
                <img src="https://vlxdsaigon24h.com/wp-content/uploads/2023/11/phone-fill.png" alt="Phone Icon">
                <h3 class="uppercase">Điện thoại</h3>
                <strong>Hotline : <a href="tel:0918345999">0918.345.999</a></strong>
            </div>
        </div>
    </div>
    <div class="right">
    <div class="form-container">
    <h4 class="uppercase"><span>Gửi mail báo giá!</span></h4>
    <form action="#" method="post">
        <div class="form-group">
            <label for="your-name">Họ và tên (*)</label>
            <input type="text" id="your-name" name="your-name" placeholder="Họ và tên (*)" required>
        </div>
        <div class="form-group">
            <label for="your-email">Email (*)</label>
            <input type="email" id="your-email" name="your-email" placeholder="Email (*)" required>
        </div>
        <div class="form-group">
            <label for="your-phone">Số điện thoại (*)</label>
            <input type="text" id="your-phone" name="your-phone" placeholder="Số điện thoại (*)" required>
        </div>
        <div class="form-group">
            <label for="your-address">Địa chỉ (*)</label>
            <input type="text" id="your-address" name="your-address" placeholder="Địa chỉ (*)" required>
        </div>
        <div class="form-group">
            <input type="submit" value="Gửi">
        </div>
    </form>
</div>
     </div>
</div>








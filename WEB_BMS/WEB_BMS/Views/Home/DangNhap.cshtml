
@model WEB_BMS.Models.KhachHang

<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        background-color: #ffffff;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .login-header {
        margin-bottom: 20px;
        color: #001981;
        font-weight: bold;
    }

    .btn-custom {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }

    .input-group-text {
        background-color: #e9ecef;
    }
</style>
<div class="container">
    <div class="login-container text-center">
        <h2 class="login-header">Đăng Nhập</h2>
        <form action="/Home/DangNhapXLThem" method="post">
            <div class="form-group mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" name="txtTen" placeholder="Tài khoản" required>
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" name="txtMK" placeholder="Mật khẩu" required>
                </div>
            </div>
            <input style="background-color: #001981; color:#fff" class="btn btn-custom btn-block w-100" type="submit" value="Đăng nhập">
        </form>
        <br />
        <a href="~/Home/DangKy" style="background-color: #001981; color:#fff" class="btn btn-custom btn-block w-100" type="submit" value="Đăng Ký">Đăng Ký</a>
    </div>
</div>


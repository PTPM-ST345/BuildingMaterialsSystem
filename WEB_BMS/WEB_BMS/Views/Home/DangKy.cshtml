

@model WEB_BMS.Models.KhachHang
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .editor-label {
        margin-top: 5px;
    }
</style>
<h2 class="text-center" style="margin-bottom:20px">Đăng Kí Khách Hàng</h2>
<div class="text-center" style="display:flex; justify-content:center;">

    @using (Html.BeginForm("DangKyXLThem", "Home", FormMethod.Post))
    {
        <fieldset class="text-center" style="background-color: #f0f0f0; padding: 30px; max-width: 500px; border-radius: 10px">
            <div class="editor-label">
                <span style=" padding-right:46px">Họ tên</span>
                @Html.EditorFor(model => model.HoTen)
            </div>


            <div class="editor-label">
                <span style=" padding-right:24px">Ngày sinh</span>
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { type = "date" } })
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(model => model.NgaySinh)
            </div>

            <div class="editor-label">
                <span style=" padding-right:34px">Giới tính</span>
                @Html.EditorFor(model => model.GioiTinh)
            </div>

            <div class="editor-label">
                <span style=" padding-right:2px">Số điện thoại</span>
                @Html.EditorFor(model => model.DienThoai)
            </div>

            <div class="editor-label">
                <span style=" padding-right:28px">Tài Khoản</span>
                @Html.EditorFor(model => model.TaiKhoan)
            </div>

            <div class="editor-label">
                <span style=" padding-right:28px">Mật Khẩu</span>
                @Html.PasswordFor(model => model.MatKhau)
            </div>


            <div class="editor-label">
                <span style=" padding-right:58px">Email</span>
                @Html.EditorFor(model => model.Email)
            </div>

            <div class="editor-label">
                <span style=" padding-right:46px">Địa chỉ</span>
                @Html.EditorFor(model => model.DiaChi)
            </div>


            <p style="margin-bottom:0px">
                <input class="btn btn-success" type="submit" value="Đăng Ký" style="margin-top:20px" />
            </p>
        </fieldset>
    }

</div>